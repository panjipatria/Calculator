<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:text="9"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>
    <Button
        android:id="@+id/btn8"
        android:text="8"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn9"
        android:layout_toEndOf="@id/btn9"
        android:layout_alignBaseline="@id/btn9"
        android:layout_alignBottom="@id/btn9"/>
    <Button
        android:id="@+id/btn7"
        android:text="7"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn8"
        android:layout_toEndOf="@id/btn8"
        android:layout_alignBaseline="@id/btn8"
        android:layout_alignBottom="@id/btn8"/>
    <Button
        android:id="@+id/btn6"
        android:text="6"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn9"
        android:layout_alignLeft="@id/btn9"/>
    <Button
        android:id="@+id/btn5"
        android:text="5"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn6"
        android:layout_toEndOf="@id/btn6"
        android:layout_alignBaseline="@id/btn6"
        android:layout_alignBottom="@id/btn6"/>
    <Button
        android:id="@+id/btn4"
        android:text="4"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn5"
        android:layout_toEndOf="@id/btn5"
        android:layout_alignBaseline="@id/btn5"
        android:layout_alignBottom="@id/btn5"/>
    <Button
        android:id="@+id/btn3"
        android:text="3"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn6"
        android:layout_alignLeft="@id/btn6"/>
    <Button
        android:id="@+id/btn2"
        android:text="2"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn3"
        android:layout_toEndOf="@id/btn3"
        android:layout_alignBaseline="@id/btn3"
        android:layout_alignBottom="@id/btn3"/>
    <Button
        android:id="@+id/btn1"
        android:text="1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn2"
        android:layout_toEndOf="@id/btn2"
        android:layout_alignBaseline="@id/btn2"
        android:layout_alignBottom="@id/btn2"/>
    <Button
        android:id="@+id/btn0"
        android:text="0"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"
        android:layout_alignLeft="@id/btn2"
        android:layout_alignRight="@id/btn2"/>
    <Button
        android:id="@+id/btnclear"
        android:text="CLEAR"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn0"
        android:layout_toStartOf="@id/btn0"
        android:layout_alignBaseline="@id/btn0"
        android:layout_alignBottom="@id/btn0"/>
    <Button
        android:id="@+id/btnequals"
        android:text="="
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn0"
        android:layout_toEndOf="@id/btn0"
        android:layout_alignBaseline="@id/btn0"
        android:layout_alignBottom="@id/btn0"/>
    <Button
        android:id="@+id/btndevided"
        android:text="/"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn7"
        android:layout_toEndOf="@id/btn7"
        android:layout_alignBaseline="@id/btn7"
        android:layout_alignBottom="@id/btn7"/>
    <Button
        android:id="@+id/btnmultiple"
        android:text="*"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn4"
        android:layout_toEndOf="@id/btn4"
        android:layout_alignBaseline="@id/btn4"
        android:layout_alignBottom="@id/btn4"/>
    <Button
        android:id="@+id/btnplus"
        android:text="+"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn1"
        android:layout_toEndOf="@id/btn1"
        android:layout_alignBaseline="@id/btn1"
        android:layout_alignBottom="@id/btn1"/>
    <Button
        android:id="@+id/btnminus"
        android:text="-"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnequals"
        android:layout_toEndOf="@id/btnequals"
        android:layout_alignBaseline="@id/btnequals"
        android:layout_alignBottom="@id/btnequals"/>
    <TextView
        android:id="@+id/tvResult"
        android:text="Result"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvControl"
        android:layout_alignRight="@id/tvControl"
        android:layout_marginBottom="50dp"/>
    <TextView
        android:id="@+id/tvControl"
        android:text="Control"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btndevided"
        android:layout_alignRight="@id/btndevided"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>